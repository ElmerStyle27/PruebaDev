@{
    ViewData["Title"] = "EntradasProductos";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Vue demo</title>
    <script src="https://cdn.jsdelivr.net/npm/vue@2.5.16/dist/vue.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mt-3">
                <h1>Registrar Producto</h1>
            </div>
        </div>
    </div>
    <div id="modEntrada" class="ms-3">
        <div class="col-6">
            <select class="form-select" aria-label="Default select example" v-model="sucursalSelect" v-on:change="CambiarSucursal()">
                <option v-for="(item,index) in listadoSucursales" :value="item.id">{{item.nombre}}</option>
            </select>
        </div>
        <div class="ms-3">
            <form class="row g-3 p-2">
                <div class="col-md-6">
                    <label class="form-label">Nombre</label>
                    <input v-model="nombre" type="text" class="form-control input1" placeholder="Ej: Memoria" maxlength="50">
                </div>
                <div class="col-md-6">
                    <label class="form-label">Código de Barras</label>
                    <input v-model="codigo" class="form-control input1" type="number" placeholder="11001" maxlength="8">
                </div>
                <div class="col-md-6">
                    <label class="form-label">Cantidad</label>
                    <input v-model="cantidad" type="number" placeholder="Ej: 2" class="form-control input1" maxlength="6">
                </div>
                <div class="col-6">
                    <label class="form-label">Precio</label>
                    <input v-model="precio" type="number" placeholder="Ej: 150" class="form-control input1" maxlength="5">
                </div>
                <div class="col-12 d-flex justify-content-center mx-auto">
                    <button v-on:click="SubirProducto()" type="submit" class="btn btn-primary btn-lg center">Guardar</button>
                </div>
            </form>

        </div>


    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/js/EntradaProductos.js"></script>
</body>
</html>